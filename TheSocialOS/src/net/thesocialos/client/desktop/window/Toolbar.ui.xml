<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
>
	<ui:style>
		.panel {
			position: relative;
			top: -3px;
			left: -3px;
			right: -3px;
			width: 100%;
			height: 30px;
			background-color: rgba(25, 25, 25, 0.8);
			overflow: hidden;
			border-bottom-style: solid;
			border-width: 1px;
			border-color: grey;
			padding: 3px;
		}
		.padding {
			padding-left: 5px;
			padding-right: 5px;
		}
	</ui:style>
	<g:SimplePanel width="100%" height="29px" addStyleNames="{style.panel}">
		<g:HorizontalPanel width="120px" height="34px" verticalAlignment="ALIGN_MIDDLE">
			<g:FocusPanel ui:field="back" addStyleNames="{style.padding}">
				<g:Image ui:field="backImage" url="themes/default/backward.png" width="" height="24px" />
			</g:FocusPanel>
			<g:FocusPanel ui:field="forward" addStyleNames="{style.padding}">
				<g:Image ui:field="forwardImage" url="themes/default/forward.png" height="24px" />
			</g:FocusPanel>
			<g:FocusPanel ui:field="refresh" addStyleNames="{style.padding}">
				<g:Image ui:field="refreshImage" url="themes/default/refresh.png" height="24px" />
			</g:FocusPanel>
		</g:HorizontalPanel>
	</g:SimplePanel>
</ui:UiBinder>