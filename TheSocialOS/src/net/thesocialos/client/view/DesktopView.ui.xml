<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:s="urn:import:net.thesocialos.client.view">
	<ui:style>
		.userMenu {
			position: absolute;
			right: 10px;
			top: 29px;
		}
		.startMenu {
			position: absolute;
			left: 0px;
			top: 29px;
		}
		.desktop {
			position: fixed;
			top: 30px;
			bottom: 0px;
			overflow-x: hidden;
			overflow-y: hidden;
			background-size: 100%;
		}
		.background {
			width: 100%;
			height: 100%;
			top: 0;
			left: 0;
			z-index: 1;
		}
	</ui:style>
	<g:AbsolutePanel width="100%" height="100%">
		<s:DesktopBar height="30px" ui:field="desktopBar" />
		<s:StartMenu addStyleNames="{style.startMenu}" ui:field="startMenu" />
		<s:UserMenu addStyleNames="{style.userMenu}" ui:field="userMenu" />
		<g:AbsolutePanel width="100%" ui:field="desktop" styleName="{style.desktop}" >
			<g:Image addStyleNames="{style.background}" url="images/defaultBG.png" ui:field="background" />
		</g:AbsolutePanel>
	</g:AbsolutePanel>
</ui:UiBinder> 