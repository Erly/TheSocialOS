<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:s="urn:import:net.thesocialos.client.view">
	<ui:style src="profile.css">
		
		.black {
			background-color: black;
			width: 100%;
			height: 100%;
		}
		.topbar {
			width: 100%;
			height: 100%;
		}
		.topbarElem {
			text-align: center;
			font-variant: small-caps;
		}
	</ui:style>
	<g:PopupPanel width="1000px" height="800px">
		<g:DockLayoutPanel width="100%" height="100%" unit='PX' addStyleNames="{style.profile}">
			<g:north size="50">
				<g:HorizontalPanel addStyleNames="{style.topbar}" verticalAlignment="ALIGN_MIDDLE">
					<g:Hyperlink ui:field="linkProfile" targetHistoryToken="profile" addStyleNames="{style.topbarElem}">Profile</g:Hyperlink>
					<g:Hyperlink ui:field="linkTimeline" targetHistoryToken="timeline" addStyleNames="{style.topbarElem}">Timeline</g:Hyperlink>
					<g:Hyperlink ui:field="linkPhotos" targetHistoryToken="photos" addStyleNames="{style.topbarElem}">Photos</g:Hyperlink>
					<g:Hyperlink ui:field="linkMusic" targetHistoryToken="music" addStyleNames="{style.topbarElem}">Music</g:Hyperlink>
					<g:Hyperlink ui:field="linkVideos" targetHistoryToken="videos" addStyleNames="{style.topbarElem}">Videos</g:Hyperlink>
					<g:Hyperlink ui:field="linkLinks" targetHistoryToken="links" addStyleNames="{style.topbarElem}">Links</g:Hyperlink>
				</g:HorizontalPanel>
			</g:north>
			<g:north size="1">
				<g:HorizontalPanel addStyleNames="{style.black}" />
			</g:north>
			<g:west size="200">
				<s:ProfileLeftView ui:field="leftCol" width="100%" />
			</g:west>
			<g:west size="1">
				<g:VerticalPanel addStyleNames="{style.black}" />
			</g:west>
			<g:center>
				<g:SimplePanel />
			</g:center>
		</g:DockLayoutPanel>
	</g:PopupPanel>
</ui:UiBinder> 