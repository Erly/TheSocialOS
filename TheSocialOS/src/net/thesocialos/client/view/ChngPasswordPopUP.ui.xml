<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.title{
			color: grey;
			font-size: 22px;
		 }
		 .info{
	color:red;

	}
	</ui:style>
	<g:HTMLPanel ui:field="htmlPanel">
		<g:AbsolutePanel height="204px" width="297px">
			<g:at left="10" top="56">
				<g:Label text="Old password:" ui:field="lblOldPass"/>
			</g:at>
			<g:at left="10" top="90">
				<g:Label text="New Password:" ui:field="lblNewPass1"/>
			</g:at>
			<g:at left="10" top="127">
				<g:Label text="Repeat new Password:" ui:field="lblNewPass2"/>
			</g:at>
			<g:at left="201" top="41">
				<g:PasswordTextBox width="78px" height="16px" ui:field="txtOldPass"/>
			</g:at>
			<g:at left="201" top="75">
				<g:PasswordTextBox width="78px" height="16px" ui:field="txtNewPass1"/>
			</g:at>
			<g:at left="201" top="112">
				<g:PasswordTextBox width="78px" height="16px" ui:field="txtNewPass2"/>
			</g:at>
			<g:at left="10" top="10">
				<g:Label text="Password Change" width="430px" height="25px" styleName="{style.title}"/>
			</g:at>
			<g:at left="10" top="165">
				<g:Button text="Save" ui:field="btnSave"/>
			</g:at>
			<g:at left="80" top="177">
				<g:Label ui:field="lblState" styleName="{style.info}"/>
			</g:at>
		</g:AbsolutePanel>
	</g:HTMLPanel>
</ui:UiBinder> 