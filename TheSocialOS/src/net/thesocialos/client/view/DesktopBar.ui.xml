<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="../resources/DesktopBar.css" />
	<g:HorizontalPanel height="30px" styleName="{style.bar}" verticalAlignment="ALIGN_MIDDLE" >
		<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER">
				<g:FocusPanel width="30px" height="30px" addStyleNames="startbutton" ui:field="startButton">
				<g:Image url="./images/SocialOS-StartButton.png" addStyleNames="{style.logo}" />
			</g:FocusPanel>
		</g:HorizontalPanel>
		<g:FocusPanel height="30px" styleName="{style.searchBox}" ui:field="searchButton">
			<g:HorizontalPanel horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE" width="100%" height="100%">
				<g:Label text="SEARCH" ui:field="lblSearchBox"/>
			</g:HorizontalPanel>
		</g:FocusPanel>
		<g:Cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE" >
			<g:FocusPanel height="30px" styleName="{style.socialos}" ui:field="socialOSButton">
				<g:HorizontalPanel width="100%" height="100%">
					<g:Cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
						<g:Label text="THE SOCIAL OS" />
					</g:Cell>
				</g:HorizontalPanel>
			</g:FocusPanel>
		</g:Cell>
		<g:FocusPanel styleName="{style.petitionsBox}" height="30px" ui:field="PetitionsButton">
			<g:HorizontalPanel width="100px" height="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
				<g:Label text="Petitions" ui:field="lblPetitions"/>
				<g:Label text="5" ui:field="lblPetitionsNumber" stylePrimaryName="{style.petitionsNumber}"/>
			</g:HorizontalPanel>
		</g:FocusPanel>
		<g:Cell horizontalAlignment="ALIGN_RIGHT" width="1">
			<g:HorizontalPanel height="30px">
				<g:FocusPanel width="100%" height="30px" ui:field="focusContacts">
					<g:HorizontalPanel width="100%" height="100%" verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER">
					<g:Label text="Contacts" ui:field="lblContacts" width="60px"/>
				</g:HorizontalPanel>
				</g:FocusPanel>
				<g:Cell verticalAlignment="ALIGN_MIDDLE">
					<g:Label ui:field="clock" text="00:00" />
				</g:Cell>
				<g:Cell verticalAlignment="ALIGN_MIDDLE" >
					<g:Label styleName="{style.separator}" />
				</g:Cell>
				<g:FocusPanel height="30px" addStyleNames="userbar" ui:field="userPanel">
					<g:HorizontalPanel width="100%" height="100%">
						<g:Cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
							<g:Label text="UserName" ui:field="username" addStyleNames="{style.links}" />
						</g:Cell>
					</g:HorizontalPanel>
				</g:FocusPanel>
			</g:HorizontalPanel>
		</g:Cell>
	</g:HorizontalPanel>
</ui:UiBinder> 