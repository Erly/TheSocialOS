<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		a {
			font-weight: 700;
			color: #90D5EC;
			text-decoration: none;
		}
	</ui:style>
	<g:HTMLPanel>
		<div id="wrap">
		<div class="logoDiv" align="center">
			<img class="logo" src="./images/logo.png"/>
		</div>
		<img class="bg" src="./images/wpLogin.png"/>
		<form>
			<input class="email" type="email" placeholder="Email Address" ui:field="email"/>
			<input class="password" type="password" placeholder="Password" ui:field="password"/>
			<input class="loginButton" type="submit" value="Log in" ui:field="loginButton" />			
		</form>
		<div class="helpers">
			<a href="#">Register</a>
			/
			<a href="#">Forgot your password?</a>
		</div>
		<div class="footer">
			<table cellspacing="0" cellpadding="0" style="width: 100%; ">
				<tbody>
					<tr>
						<td align="center" style="vertical-align: bottom; ">
							<div class="gwt-Label">This web is optimized for Google Chrome and Mozilla Firefox</div>
						</td>
					</tr>
					<tr>
						<td>
							<image class="flags spain" src="http://www.crwflags.com/fotw/misc/wes.gif"/>
							<image class="flags us" src="http://www.crwflags.com/fotw/misc/wus.gif"/>
						</td>
					</tr>
					<tr>
						<td align="center">
							<img class="appEngine" src="http://code.google.com/appengine/images/appengine-silver-120x30.gif"/>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	</g:HTMLPanel>
</ui:UiBinder> 