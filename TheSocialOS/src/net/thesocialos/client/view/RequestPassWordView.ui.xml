<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.red{
			color: red;
		}
		.title{
			color: grey;
			font-size: 22px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:AbsolutePanel height="130px" width="271px">
			<g:at left="191" top="91">
				<g:Button ui:field="btnSend" width="70px" height="29px"/>
			</g:at>
			<g:at left="0" top="35">
				<g:TextBox width="251px" height="17px" maxLength="50" ui:field="textEmail"/>
			</g:at>
			<g:at left="10" top="75">
				<g:Label ui:field="lblNotValid" styleName="{style.red}"/>
			</g:at>
			<g:at left="0" top="0">
				<g:Label text="Password Recovery" width="246px" height="31px" styleName="{style.title}"/>
			</g:at>
		</g:AbsolutePanel>
	</g:HTMLPanel>
</ui:UiBinder> 