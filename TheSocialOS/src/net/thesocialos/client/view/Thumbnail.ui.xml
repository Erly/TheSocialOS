<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:s="urn:import:net.thesocialos.client.advanced"
>
	<ui:style>
		.label {
			font-weight: bold;
			color: white;
			text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;
			font-size: 12px;
			overflow-x: hidden;
		}
		.sublabel {
			color: white;
			text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;
			font-size: 12px;
			overflow-x: hidden;
		}
		.imagesPanel {
			position: relative;
		}
		.badge {
			position: absolute;
			top: 0;
			right: 0;
		}
	</ui:style>
	<s:AdvFocusPanel ui:field="panel">
		<g:VerticalPanel horizontalAlignment="ALIGN_CENTER" width="150px">
			<g:FlowPanel addStyleNames="{style.imagesPanel}">
				<g:Image ui:field="image" width="120px" height="120px" url="images/Folder.png" />
				<g:Image ui:field="badge" width ="20px" height="20px" addStyleNames="{style.badge}"/>
			</g:FlowPanel>
			<g:Label ui:field="text" width="150px" text="new folder" addStyleNames="{style.label}" />
			<g:Label ui:field="subText" width="150px" text="" addStyleNames="{style.sublabel}" />
		</g:VerticalPanel>
	</s:AdvFocusPanel>
</ui:UiBinder>