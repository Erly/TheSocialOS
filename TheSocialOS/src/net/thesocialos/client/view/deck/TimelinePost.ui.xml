<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.post {
			border: 1px solid lightgrey;
			padding: 3px;
		}
		.black {
			font-weight: bold;
		}
		.padding {
			padding: 5px;
		}
	</ui:style>
	<g:HorizontalPanel width="100%" addStyleNames="{style.post}" height="">
		<g:Image ui:field="photo" width="40px" height="40px" addStyleNames="{style.padding}" />
		<g:VerticalPanel width="100%">
			<g:HTML ui:field="post" text="Tweet" />
			<g:Cell verticalAlignment="ALIGN_BOTTOM" height="20px">
				<g:HorizontalPanel height="" verticalAlignment="ALIGN_MIDDLE" width="100%">
					<g:Label ui:field="user" text="User Surname @username" addStyleNames="{style.black}" />
					<g:Cell horizontalAlignment="ALIGN_RIGHT">
						<g:Label ui:field="time" text="40m" horizontalAlignment="ALIGN_RIGHT" />
					</g:Cell>
				</g:HorizontalPanel>
			</g:Cell>
		</g:VerticalPanel>
	</g:HorizontalPanel>
</ui:UiBinder> 