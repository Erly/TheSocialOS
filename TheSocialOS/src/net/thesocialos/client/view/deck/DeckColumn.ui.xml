<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.column {
			border: 1px solid white;
		}
	</ui:style>
	<g:VerticalPanel height="100%" width="300px" addStyleNames="{style.column}">
		<g:VerticalPanel horizontalAlignment="ALIGN_CENTER" width="100%" height="70px">
			<g:Label text="Title" ui:field="title"/>
			<g:Label text="0 new" ui:field="newCounts"/>
		</g:VerticalPanel>
		<g:Cell height="100%">
			<g:ScrollPanel height="100%">
				<g:VerticalPanel width="100%" ui:field="postsColumn" />
			</g:ScrollPanel>
		</g:Cell>
	</g:VerticalPanel>
</ui:UiBinder> 