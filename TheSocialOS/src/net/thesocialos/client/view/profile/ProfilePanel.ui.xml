<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:p="urn:import:net.thesocialos.client.view.profile">
	<ui:style>
		.padding {
			padding: 5px;
		}
		.prueba {
		border-style: solid;
		border-colour: red;

	}
	.font{
	 color:white;
	}
}
	</ui:style>
	<g:SimplePanel addStyleNames="{style.padding}">
		
		<g:HorizontalPanel spacing="2" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
			<g:VerticalPanel horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_MIDDLE" styleName="{style.prueba}">
			<p:ProfileAttr attrName="Email:" attrValue="jcuesta@thesocialos.net" ui:field="email" editable="false" closeEnable="false" />
			<p:ProfileAttr attrName="Title:" attrValue="Presidente de la comunidad" ui:field="title" editable="false" closeEnable="false" />
			<p:ProfileAttr attrName="Name:" attrValue="Juan Cuesta" ui:field="name" editable="false" closeEnable="false" />
			<p:ProfileAttr attrName="Surname:" attrValue="Correa Cruz" ui:field="surname" editable = "false" closeEnable="false"/>
			<p:ProfileAttr attrName="Mobile:" attrValue="666666666" ui:field="mobile" editable="false" closeEnable="false" />
			<p:ProfileAttr attrName="Address:" attrValue="Desengaño 21 2ºA" ui:field="address" editable="false" closeEnable="false" />
			<p:ProfileAttrArea attrName="Bio:" attrValue="TURURURURURUURURURURURUURURRU" ui:field="bio" editable="false"/>
			<g:Button ui:field="btnEdit">Edit</g:Button>
			</g:VerticalPanel>
			<g:VerticalPanel  verticalAlignment="ALIGN_BOTTOM" horizontalAlignment="ALIGN_CENTER">
				<g:FormPanel ui:field="uploadForm">
					<g:HorizontalPanel width="100%" height="100%">
					<g:VerticalPanel horizontalAlignment="ALIGN_RIGHT" width="315px" ui:field="vertical">
						<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" width="248px">
							<g:Image width="130px" height="176px" ui:field="imageAvatar"/>
						</g:HorizontalPanel>
					</g:VerticalPanel>
				</g:HorizontalPanel>
				</g:FormPanel>
				<p:ProfileAttr attrName="Google Account:" attrValue="Sign in" ui:field="google" editable="false" closeEnable="true" height="46px" />
				<p:ProfileAttr attrName="Facebook Account:" attrValue="Sign in" ui:field="facebook" editable="false" closeEnable="true" height="46px" />
				<p:ProfileAttr attrName="Twitter Account:" attrValue="Sign in" ui:field="twitter" editable="false" closeEnable="true" height="46px" />
				<p:ProfileAttr attrName="Flickr Account:" attrValue="Sign in" ui:field="flickr" editable="false" closeEnable="true" height="46px" />
			</g:VerticalPanel>
		</g:HorizontalPanel>
		
	</g:SimplePanel>
</ui:UiBinder> 