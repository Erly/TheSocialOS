<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		
		.profileAttrPadding {
			padding: 10px;
		}
		.profileAttrName {
			color: white;
		}
		.textArea-NotResize {
			resize:none;

		}
		.editable{
			border-style : solid;
			
			border-color: #29A9B2;
	
		}
	</ui:style>
	<g:HTMLPanel>
		<g:FocusPanel addStyleNames="profileAttr" ui:field="focusPanel">
		<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
			<g:VerticalPanel horizontalAlignment="ALIGN_CENTER" addStyleNames="{style.profileAttrPadding}" width="140px">
				<g:Label ui:field="attrName" addStyleNames="{style.profileAttrName}" />
			</g:VerticalPanel>
			<g:VerticalPanel addStyleNames="{style.profileAttrPadding}">
				
				<g:TextArea styleName="{style.textArea-NotResize}" width="191px" height="58px" ui:field="attrValue"/>
			</g:VerticalPanel>
		</g:HorizontalPanel>
	</g:FocusPanel>
	</g:HTMLPanel>
</ui:UiBinder> 