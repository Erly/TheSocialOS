<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.profileAttr {
			width: 100%;
		}
		.profileAttr:hover {
			background-color: aliceblue;
		}
		.profileAttrPadding {
			padding: 10px;
		}
		.profileAttrName {
			color: grey;
		}
		.textArea-NotResize {
			resize:none;

		}
	</ui:style>
	<g:HTMLPanel>
		<g:FocusPanel addStyleNames="{style.profileAttr}" ui:field="focusPanel">
		<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
			<g:VerticalPanel horizontalAlignment="ALIGN_CENTER" addStyleNames="{style.profileAttrPadding}" width="140px">
				<g:Label ui:field="attrName" addStyleNames="{style.profileAttrName}" />
			</g:VerticalPanel>
			<g:VerticalPanel addStyleNames="{style.profileAttrPadding}">
				
				<g:TextArea styleName="{style.textArea-NotResize}" width="187px" height="58px" ui:field="attrValue"/>
			</g:VerticalPanel>
		</g:HorizontalPanel>
	</g:FocusPanel>
	</g:HTMLPanel>
</ui:UiBinder> 