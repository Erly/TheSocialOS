<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d="urn:import:net.thesocialos.client.view.profile">
	<ui:style src="../../resources/Profile.css">
		
		.black {
			background-color: black;
			width: 100%;
			height: 100%;
		}
		.topbar {
			width: 100%;
			height: 100%;
		}
		.topbarElem {
			text-align: center;
			font-variant: small-caps;
		}
		.mainPanel {
			padding-left: 15px;
			padding-top: 15px;
		}
	</ui:style>
	<g:DockLayoutPanel width="100%" height="100%" unit='PX' addStyleNames="{style.profile}">
		<g:north size="50">
			<g:HorizontalPanel addStyleNames="{style.topbar}" verticalAlignment="ALIGN_MIDDLE">
				<g:Hyperlink ui:field="linkProfile" targetHistoryToken="profile" addStyleNames="{style.topbarElem}">Profile</g:Hyperlink>
				<g:Hyperlink ui:field="linkTimeline" targetHistoryToken="profile-timeline" addStyleNames="{style.topbarElem}">Timeline</g:Hyperlink>
				
				<g:Cell horizontalAlignment="ALIGN_RIGHT" width="20px">
					<g:VerticalPanel verticalAlignment="ALIGN_TOP" height="100%">
						<g:Button text="X" ui:field="closeButton" />
					</g:VerticalPanel>
				</g:Cell>
			</g:HorizontalPanel>
		</g:north>
		<g:north size="1">
			<g:SimplePanel addStyleNames="{style.black}" />
		</g:north>
		<g:west size="200">
			<d:ProfileLeftView ui:field="leftCol" width="100%" />
		</g:west>
		<g:west size="1">
			<g:SimplePanel addStyleNames="{style.black}" />
		</g:west>
		<g:center>
			<g:ScrollPanel ui:field="mainPanel">
			</g:ScrollPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 