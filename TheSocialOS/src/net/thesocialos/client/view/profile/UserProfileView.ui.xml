<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d="urn:import:net.thesocialos.client.view.profile">
	<ui:style src="../../resources/Profile.css">
		
		.black {
			background-color: black;
			width: 100%;
			height: 100%;
		}
		.topbar {
			width: 100%;
			height: 100%;
			padding: 3px;
		}
		.topbarElem {
			text-align: center;
			font-variant: small-caps;
		}
		.mainPanel {
			padding-left: 15px;
			padding-top: 15px;
		}
		.GWT-Button {
		}
	</ui:style>
	<g:DockLayoutPanel width="100%" height="100%" unit='PX' addStyleNames="{style.profile}">
		<g:north size="30">
			<g:HorizontalPanel addStyleNames="{style.topbar}" verticalAlignment="ALIGN_TOP" horizontalAlignment="ALIGN_RIGHT">
				<g:Button ui:field="closeButton" >X</g:Button>
			</g:HorizontalPanel>
		</g:north>
		<g:center>
			<g:ScrollPanel ui:field="mainPanel" width="99%" height="99%">
			</g:ScrollPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 