<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.label {
			font-weight: bold;
			color: white;
			text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;
			font-size: 10px;
		}
	</ui:style>
	<g:FocusPanel ui:field="panel">
		<g:VerticalPanel horizontalAlignment="ALIGN_CENTER" width="80px">
			<g:Image ui:field="image" width="60px" height="60px" url="images/Folder.png" />
			<g:Label ui:field="text" width="80px" text="new folder" addStyleNames="{style.label}" />
		</g:VerticalPanel>
	</g:FocusPanel>
</ui:UiBinder> 