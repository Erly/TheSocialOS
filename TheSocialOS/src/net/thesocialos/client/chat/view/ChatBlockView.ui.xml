<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.border{
		border-style:solid;
		border-width:1px;

		}
		
		.image{
		background-color: white;
		border-style:solid;
		border-width:1px;
		
		}
		
	</ui:style>
	<g:HTMLPanel>
		<g:AbsolutePanel height="74px" width="62px" ui:field="background" styleName="chatBlock_background_red">
			<g:at left="3" top="3">
				<g:Image url="images/anonymous_avatar.png" styleName="{style.image}" width="53px" height="65px" ui:field="lblImage"/>
			</g:at>
			
		</g:AbsolutePanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 